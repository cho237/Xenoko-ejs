<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<%- include('../includes/nav.ejs') %>


<h3>email : <%= email %></h3>
<h3>Date :<%= date %></h3>
<% if(cars.length < 1 ) { %>
<h1>No car</h1>
<a href="/add-car" class="btn btn-success">New Car</a>
<% }else{ %>
   
        <div class="container">
            <h1>Cars(<%= cars.length %>)</h1>
            
            <div class="row">
                <div class="col-12">
                    
                        <table class="table table-dark">
                            <thead>
                              <tr>
                                <th scope="col">id</th>
                                <th scope="col">immatriculation</th>
                                
                                
                                <th scope="col">status</th>
                              
                                <th scope="col">operation</th>
                                <th scope="col">Document</th>
                                <th scope="col">Revenue</th>

                                

                              </tr>
                            </thead>
                            <% for( let c of cars){ %> 
                            <tbody>
                              <tr>
                                <th scope="row"><a href="/detail-car/<%= c._id %>"><%= c._id %></a></th>
                                <td><%= c.immatriculation%></td>
                                
                              
                                <td><%= c.status%></td>
                                
                                <td>
                                    
                                    <form action="/delete-car" method="post">
                                        <input type="hidden" name="carId" value="<%=c._id%>">
                                        <button type="submit" class="fas fa-trash-alt"></button>
                                    </form>
                                    
                                </td>
                                <td><a href="/add-documentCar/<%= c._id %>" class="fas fa-file-upload"></a></button></td>
                                <td><a href="/enterRevenue/<%= c._id %>" class="fas fa-money-check-alt"></a></td>
                              </tr>
                            </tbody>
                            <% } %>   
                        </table>

                        <a href="/add-car" class="btn btn-success">New Car</a>
                </div>
            </div>
            <% } %>
            <br>
            <br>
            <h1>Drivers(<%= drivers.length %>)</h1>
            <table class="table table-dark">
              <thead>
                <tr>
                  <th>id</th>
                  <th>Firstname</th>
                  <th>contact</th>
                  <th>operation</th>
                  <th>document</th>
                  


                </tr>
              </thead>
              <tbody>
                <% for( let d of drivers){ %> 
                <tr>
                  <td><a href="/detail-driver/<%= d._id %>"><%= d._id %></a></td>
                  <td><%= d.fname %></td>
                  <td><%= d.contact %></td>
                  <td>
                    <form action="/delete-driver" method="post">
                      <input type="hidden" name="driverId" value="<%=d._id%>">
                      <button type="submit" class="fas fa-trash-alt"></button>
                  </form>
                  
                  </td>
                  <td><a href="/add-documentDriver/<%= d._id %>" class="fas fa-file-upload"></a></button></td>
                  
                </tr>
                <% } %> 
              </tbody>
            </table>
            
              
             
            <a href="/add-driver" class="btn btn-success">New Driver</a>
        </div>
    
      





<%- include('../includes/end.ejs') %>







