<%- include('../includes/head.ejs') %>
<%- include('../includes/nav.ejs') %>


<div class="container">
    <div class="row">

        <div class="col-lg-4">
            <div class="container">
                <h1>SignUp</h1><br><br>
                <form action="/signUp" method="POST" novalidate>

                    <div class="form-group">
                        <label for="email">email</label>
                        <input 
                            type="text" 
                            class="form-control <%= validationErrors.find(e=>e.param === 'email')?'border border-danger' : ''%>" 
                            id="email" 
                            placeholder="email" 
                            name="email">
                    </div>
                    <div class="form-group">
                        <label for="password">password</label>
                        <input 
                            type="password" 
                            class="form-control <%= validationErrors.find(e=>e.param === 'password')?'border border-danger' : ''%>" 
                            id="password" 
                            placeholder="password"
                            name="password">
                    </div>
                    <%if(errorMessage){%>
                        <p class="text-danger"><%= errorMessage %></p>
                    <%}%>
                    <button class="btn btn-success" type="submit">signUp</button>
                </form>
                
               
            </div>
    </div>
    </div>
</div>



<%- include('../includes/end.ejs') %>